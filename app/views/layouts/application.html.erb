<!DOCTYPE html>
<html>
  <head>
    <title>AichanVeggieBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul id="menu">
          <li><%= link_to t('menu.farm'), '#about' %></li>
          <li><%= link_to t('menu.veggies'), '#veggies' %></li>
          <li><%= link_to t('menu.order'), '#order' %></li>
          <li><%= link_to t('menu.blog'), '#' %></li>
          <li><%= link_to t('menu.language'), other_locale %></li>
        </ul>
      </nav>
      <h1><%= t('site_title') %></h1>
    </header>
    
    <%= yield %>

    <footer>
      <p><%= t('copyright') %></p>
    </footer>
  </body>
</html>
