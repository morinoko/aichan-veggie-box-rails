<% if @veggie_box %>
	<% if @veggie_box.photo.attached? %>
		<div class="image">
			<%= image_tag(@veggie_box.photo.variant(resize_to_limit: [555, 555])) %>
		</div>
	<% end %>
	<div class="description">
		<h3><%= @veggie_box.localized_title %></h3>
		<p><%= @veggie_box.localized_description %></p>
		<%= link_to t('veggie_boxes.edit'), edit_veggie_box_path(@veggie_box) if logged_in? %>
	</div>
<% else %>
	<div class="description">
		<h3><%= t('veggie_boxes.coming_soon_title') %></h3>
		<p><%= t('veggie_boxes.coming_soon') %></p>
		<%= link_to t('veggie_boxes.edit'), new_veggie_box_path if logged_in? %>
	</div>
<% end %>