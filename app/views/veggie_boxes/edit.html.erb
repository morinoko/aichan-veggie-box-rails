
<div class="container narrow">
	<h1><%= t('veggie_boxes.form.title') %></h1>
	<%= form_for @veggie_box do |f| %>
		<div class="form-group image-group">
			<%= image_tag(@veggie_box.thumbnail) if @veggie_box.photo.attached? %>
			<div>
				<%= f.label :photo %><br>
				<%= f.file_field :photo, accept: 'image/png,image/gif,image/jpeg' %>
			</div>
		</div>
		<section id="japanese">
			<h2>日本語</h2>
			<div class="form-group">
					<%= f.label :title_ja %>
					<%= f.text_field :title_ja %>
			</div>
			<div class="form-group">
					<%= f.label :description_ja %>
					<%= f.text_area :description_ja, rows: 10 %>
			</div>
		</section>
		<section id="english">
			<h2>English</h2>
			<div class="form-group">
					<%= f.label :title_en %>
					<%= f.text_field :title_en %>
			</div>
			<div class="form-group">
					<%= f.label :description_en %>
					<%= f.text_area :description_en, rows: 10 %>
			</div>
		</section>
		<%= f.submit t('veggie_boxes.form.submit'), id: "submit" %>
	<% end %>
</div>
